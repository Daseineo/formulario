    <script>
        document.getElementById('pilaresForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Formulario guardado con éxito. En una implementación real, estos datos se enviarían a un servidor.');
            // Aquí iría el código para enviar los datos a un servidor
        });

        // Evitar que se puedan seleccionar ambos checkboxes (Sí y No) en la misma fila
        document.querySelectorAll('table input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const row = this.closest('tr');
                const name = this.getAttribute('name');
                const value = this.value;
                
                if (value === 'si') {
                    row.querySelector(`input[name="${name}"][value="no"]`).checked = false;
                } else {
                    row.querySelector(`input[name="${name}"][value="si"]`).checked = false;
                }
            });
        });
    </script>
